<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/tweet_user_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/tweet_user_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tweet_user_name"
        android:layout_alignBottom="@+id/tweet_user_name"
        android:layout_toEndOf="@+id/tweet_user_name"
        />

    <TextView
        android:id="@+id/tweet_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tweet_user_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/tweet_user_image"
        />


    <TextView
        android:id="@+id/tweet_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tweet_user_name"
        android:layout_below="@+id/tweet_user_name"
        />

</RelativeLayout>